{
	"name": "fuiz-website",
	"version": "0.1.0",
	"private": true,
	"engines": {
		"bun": ">=1.2.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide && vite build",
		"preview": "bun run build && wrangler dev --compatibility-flags=nodejs_compat",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"deploy": "bun run build && wrangler deploy",
		"cf-typegen": "wrangler types && mv worker-configuration.d.ts src/",
		"postinstall": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250913.0",
		"@sveltejs/adapter-cloudflare": "^7.2.3",
		"@sveltejs/kit": "^2.39.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@types/object-hash": "^3.0.6",
		"@types/qrcode": "^1.5.5",
		"@typescript-eslint/eslint-plugin": "^8.43.0",
		"@typescript-eslint/parser": "^8.43.0",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.3",
		"mdsvex": "^0.12.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"super-sitemap": "^1.0.5",
		"svelte": "^5.38.10",
		"svelte-check": "^4.3.1",
		"svelte-dnd-action": "^0.9.65",
		"svelte-preprocess-import-assets": "^1.1.0",
		"tslib": "^2.8.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.43.0",
		"vite": "^7.1.5",
		"wrangler": "^4.37.0",
		"@inlang/paraglide-js": "2.3.2"
	},
	"type": "module",
	"dependencies": {
		"@auth/d1-adapter": "^1.10.0",
		"@auth/sveltekit": "^1.10.0",
		"@fontsource/atkinson-hyperlegible": "^5.2.7",
		"@fontsource/poppins": "^5.2.6",
		"@ltd/j-toml": "^1.38.0",
		"@oddbird/popover-polyfill": "^0.6.1",
		"@svelte-put/inline-svg": "^4.0.2",
		"@sveltejs/enhanced-img": "^0.8.1",
		"jszip": "^3.10.1",
		"object-hash": "^3.0.0",
		"qrcode": "^1.5.4",
		"query-string": "^9.3.0",
		"svelte-confetti": "^2.3.2",
		"svelte-headlessui": "^0.0.46",
		"tippy.js": "^6.3.7"
	}
}
